<article class="post-item">
  <h2><%= post2.title %></h2>
  <p class="post-item-author">By <%= post2.author_name %></p>
  <p><%= post2.summary %></p>
  <div class="post-actions">
    <form action="/post/<%= post2.id %>/delete">
      <button class="btn btn-alt">Delete Post</button>
    </form>
    <a href="/update/<%=post2.id  %>/edit">Edit Post</a>
    <a class="btn" href="/posts/<%=post2.id  %>">View Post</a>
  </div>
</article>
